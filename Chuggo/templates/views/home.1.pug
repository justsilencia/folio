extends ../layouts/default
include ../mixins/crop-modal

block head
    link(href="/styles/croppie.css", rel="stylesheet")

block content
    +crop-profileimg-lg()
    +crop-profileimg-sm()
    .container
        .user-home-left-col.col-lg-4.mt-4
            .row
                .lg-prof-img
                    a(id='updateLgImg' class='btn btn-primary btn-update-lg-img')
                        i.fas.fa-camera
                    img(src=profileInfo.lgImg)
            .row
                .user-profile-meta-row
                    .sm-prof-img
                        a(id='updateSmImg' class='btn btn-primary btn-update-sm-img')
                            i.fas.fa-camera
                        img(src=profileInfo.smImg)
                    .user-profile-meta-left
                        span.glyphicon.glyphicon-grain
                            | Followers: 1,521
                    .user-profile-meta-right
                        span.glyphicon.glyphicon-grain
                            | Following: 34
            .row.mt-8.tabset(id='tabs-parent')
            .row.mt-5
                form(id='upload' class='mt-4' method='post' action='/home' enctype='multipart/form-data')
                    .div(id='drop')
                        | drop here
                        a Browse
                        input(type='file' class='knob' name='image' multiple)
                    ul
        .col-lg-5.mt-4
            div(id='following-parent')
        .col-lg-3.mt-4
            div(id='recommended-parent')

block js
    script(src='/js/jquery-fileupload/jquery.knob.js')
    script(src='/js/jquery-fileupload/jquery.ui.widget.js')
    script(src='/js/jquery-fileupload/jquery.iframe-transport.js')
    script(src='/js/jquery-fileupload/jquery.fileupload.js')
    script(src='/js/jquery-fileupload/script.js')
    script(src='/js/croppie.js')
    script(src='/js/profile-img-upload.js')
    script(src='/js/jquery/inViewPort.js')
    script(src='/bundle.js')